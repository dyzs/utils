<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/oxygen_grey"
        android:text="@string/app_name"
        android:gravity="center"
        />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oxygen_green"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oxygen_grey"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oxygen_yellow"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/blood_red"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/girl_pink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/holy_red"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oxygen_grey"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oxygen_green"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oxygen_yellow"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/blood_red"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/girl_pink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/holy_red"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
