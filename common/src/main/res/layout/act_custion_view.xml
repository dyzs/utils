<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/solar_eclipse_loading"
        style="@style/CommonTextViewItem"
        android:text="Solar Eclipse Loading"
        />

    <TextView
        android:id="@+id/multi_player"
        style="@style/CommonTextViewItem"
        android:text="YinJi Multi Player"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <com.dyzs.common.ui.DottedLine
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lineType="0"
            app:lineDotColor="@color/green"
            app:lineDashGap="3dp"
            app:lineDashWidth="6dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <com.dyzs.common.ui.DottedLine
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lineType="2"
            />

    </RelativeLayout>


</LinearLayout>